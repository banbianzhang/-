/**app.wxss**/
.loading{
  position: fixed;
  top:0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 200000;
}

.loading-bg{
  position: absolute;
  height: 100%;
  width: 100%;
  z-index: 200001;
}

.loading-icon{
  position: relative;
  width: 50px;
  height: 50px;
  z-index: 200002;
}

.container {
  display: block;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  position: relative;
} 

.result{
  box-sizing: content-box;
  display: flex;
  position: relative;
  align-items: center;
  flex-direction: column;
  width:100%;
  z-index: 60002;
}

.init-page{
  box-sizing: content-box;
  display: flex;
  position: relative;
  align-items: center;
  flex-direction: column;
  width:100%;
  z-index: 60002;
}

.bg{
  position: fixed;
  top:0;
  width:100%;
  height: 100%;
  z-index: 0;
}

.setting-mask{
  position: fixed;
  height: 100%;
  width: 100%;
  top:0;
  background: rgba(30,30,30,0.2);
  z-index: 100000;
}

.setting{
  position: fixed;
  width: 80%;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
  padding: 20px;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  z-index: 100001;
  color:#ccc;
}

.setting-title{
  margin-bottom: 10px;
  font-size: 20px;
  height: 30px;
}

.setting-help{
  margin-bottom: 20px;
  font-size: 10px;
}

.setting-block-title{
  font-size: 17px;
  margin-bottom: 20px;
}

.option{
  font-size: 14px;
  margin-bottom: 10px;
}

.option-comment{
  margin-left: 30px;
  font-size: 10px;
}

.setting-block{
  margin-bottom: 10px;
  width:100%
}

.button{
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  padding: 3px;
  margin-bottom: 3px;
  width:70px;
}

.option-button{
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  flex-direction: row;
}

.option-button-son{
  margin-top: auto;
  margin-bottom: auto;
}