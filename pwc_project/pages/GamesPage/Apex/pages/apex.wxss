/* pages/GamesPage/Apex/apex.wxss */
.init-page{
  color: white;
  font-size: 20px;
  text-align: center;
}

.init-page view{
  margin:20px 0;
}

.legend-name{
  color: white;
  font-size: 40px;
  font-family: 黑体;
  margin-bottom: 10px;
  text-shadow: 0px 0px 12px #000;
}

.mask{
  position: absolute;
  width: 100%;
  bottom: 0;
  z-index: 60001;
  background: -webkit-linear-gradient(bottom,rgba(204,50,10,0.9),rgba(204,50,10,0.5),rgba(204,50,10,0));
}

.result-block{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  position: absolute;
  width: 90%;
  bottom: 20px;
}

.result-info{
  color: white;
  font-size: 20px;
  margin-bottom: 15px;
  text-shadow: 0px 0px 12px #000;
}

.legend-image{
  position: absolute;
  z-index: 60000;
  bottom: 0;
  width:100%;
}

.comment{
  padding: 1px 20px;
  color:#aaa;
  font-size: 15px;
  background: rgba(30,30,30,0.7);
}

.weapon-panel{
  position: relative;
  width: 100%;
  padding-top: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  text-shadow: 0px 0px 12px #000;
}

.weapon{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  position: relative;
  width: 100%;
}

.weapon-block{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 40%;
  padding: 10px 10px;
  color:#fff;
  background: rgba(30,30,30,0.7);
}

.weapon-img{
  position: relative;
  height:50px;
  max-width: 100%;
  margin-bottom: 10px;
}

.legend-list{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}

.legend-block{
  position: relative;
  height: 80px;
  width: 60px;
  border:#D64033 2px solid;
  margin-bottom: 5px;
}

.legend-block-name{
  box-sizing: border-box;
  position: absolute;
  bottom: -2px;
  left: -2px;
  right: -2px;
  width: 64px;
  height: 22px;
  font-size: 12px;
  background-color: #D64033;
  text-align: center;
  padding:1px 0px 5px 0;
  margin:auto;
}

.legend-profile{
  position: absolute;
  top: 0;
  height: 60px;
  width: 60px;
  z-index: 100002;
}

.image-mask{
  position: absolute;
  top: 0;
  height: 60px;
  width: 60px;
  background-color: rgba(30,30,30,0.5);
  z-index: 100003;
}

.setting-help{
  color: #aaa;
}

.setting{
  border-top: 6px solid #D64033;
  background: -webkit-linear-gradient(top,#2B2B2B,#2D2D2B);
  color:#ccc;
}

.setting-block-title{
  border-bottom: 2px solid #aaa;
  color: #ccc;
}

.option-comment{
  color: #aaa;
}

.button{
  background-color: #D64033;
  color: #fff;
}